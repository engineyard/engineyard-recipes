#!/usr/bin/env ruby

$:.unshift(File.expand_path(File.dirname(__FILE__) + "/../lib"))
require 'engineyard-recipes'
require 'engineyard-recipes/cli'

begin
  Engineyard::Recipes::CLI.start
rescue EY::Error => e
  EY.ui.print_exception(e)
  exit(1)
rescue Interrupt => e
  puts
  EY.ui.print_exception(e)
  EY.ui.say("Quitting...")
  exit(1)
end
